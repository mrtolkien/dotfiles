# fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Zoxide = z replacement!
eval "$(zoxide init zsh)"

# Starship prompt
eval "$(starship init zsh)"

# Make nvim the default CLI editor
export EDITOR="nvim"

